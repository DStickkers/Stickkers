<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qboardWhite"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonStickerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sticker View Activity" />

        <Button
            android:id="@+id/buttonSearchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search View Activity" />

        <Button
            android:id="@+id/buttonBottomSheetView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BottomSheet Giph View" />

        <Button
            android:id="@+id/buttonResponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Response Activity" />


    </LinearLayout>


</RelativeLayout>